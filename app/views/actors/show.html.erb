<!-- actors show -->

<script> 
$(document).ready(function() {   
	set_image_aspect_ratio("img-actor", 1.3);
    set_image_aspect_ratio("img-drama", 0.7);
})   

</script>
 
<div id="main-container" class="container" style="margin-top:2%">

<div class="row"style="margin-bottom:30px">
	<div class="col-xs-6">            
		<button type="button" style="align-self: center;" class="btn btn-info" 
			onclick="location.assign('<%= dramas_path %>')">ドラマから探す</button>
		
	</div>
	<div class="col-xs-6 text-right">		
		<button type="button" style="align-self: center;" class="btn btn-danger" 
			onclick="location.assign('<%= actors_path %>')">俳優から探す</button>		
	</div>
</div>

<div class="row"style="margin-bottom:30px">
	<div class="col-xs-6 col-lg-3">            
		<img class="img-actor" style="width:100%;"src="<%= image_url(@actor.eng_name) %>">		
	</div>
	<div class="col-xs-6 col-lg-9">		
		<h2><%= @actor.name %></h2>
		<p><strong>生年月日</strong> <%= @actor.birthdate %></p>
		<p><strong>出身地</strong> <%= @actor.birthplace %></p>
		<p><strong>身長</strong> <%= @actor.height %></p>
		<p><strong>体重</strong> <%= @actor.weight %></p>		
		<p><strong>血液方</strong> <%= @actor.blood %></p>
		<p><strong>配偶者</strong> <%= @actor.spouse %></p>
		<p><strong>所属社</strong> <%= @actor.company %></p>
				
    </div>
</div>


<div class="row"style="margin-bottom:30px">
    <% @actor.dramas.each do |drama| %>
        <div class="col-xs-4 col-lg-2">	
            <div><a href="<%= drama_path(drama) %>">
            <img class="img-drama" style="width:100%;"src="<%= image_url(drama.eng_title) %>"></a>
            </div>
            <div style="height: 1.1em; overflow:hidden"><strong><%= drama.title %></strong></div>
        </div>
    <% end %>
</div>


<% if is_admin %>
    <div class="row" style="margin-top:1em">
        <div class="col">
            <%= link_to '修正', edit_actor_path(@actor) %>
            <%= link_to '削除', actor_path(@actor), 
                method: :delete, data: { confirm: '削除しますか？' } %>
        </div>
    </div>
<% end %>

</div>



