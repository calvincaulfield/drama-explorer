<script>
$(document).ready(function() {  
    set_image_aspect_ratio("img-actor", 1.3);
    set_image_aspect_ratio("img-drama", 0.7);
})  

</script>

<div id="main-container" class="container" style="margin-top:2%">
    <div class="row"style="margin-bottom:30px">
    <!--
        <div class="col-8">
            <h1>南くんのドラマチャンネル</h1>
        </div> -->
        <div class="col-12">            
            <button type="button" style="align-self: center;" class="btn btn-info" 
                onclick="location.assign('<%= dramas_path %>')">ドラマから探す</button>
            
        </div>
    </div>
    <div class="row justify-content-start" style="margin-bottom:30px">
        <% @actors.each do |actor| %>   
            <div class="col-3 col-lg-2">
                <p><a href="<%= actor_path(actor)%>"><img class="img-actor" style="width:100%;" src="<%= actor.img_url %>"></a><br>
                <strong><%= actor.name %></strong>
                <% if request.host_with_port == admin_url %>
                    <%= link_to '修正', edit_actor_path(actor) %>
                    <%= link_to '削除', actor_path(actor), method: :delete, 
                        data: { confirm: '削除しますか？' } %>
                <% end %></p>
            </div>
        <% end %>
    </div>
    <% if request.host_with_port == admin_url %>
        <div class="row">
            <div class="col">
                <button type="button" class="btn"  onclick="location.assign('<%= new_actor_path %>')">新俳優を登録</button>
            </div>
        </div>
    <% end %>
</div>